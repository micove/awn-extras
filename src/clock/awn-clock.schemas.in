<gconfschemafile>

    <schemalist>
      
      <schema>
        <key>/schemas/apps/awn-clock/prefs/clock_show_second</key>
        <owner>awn-clock</owner>
        <type>bool</type>
        <default>True</default>
        <locale name="C">
          <short>Display the seconds</short>
          <long></long>
        </locale>
      </schema>

      <schema>
        <key>/schemas/apps/awn-clock/prefs/clock_digital</key>
        <owner>awn-clock</owner>
        <type>bool</type>
        <default>False</default>
        <locale name="C">
          <short>Use analogic or digital display</short>
          <long></long>
        </locale>
      </schema>

      <schema>
        <key>/schemas/apps/awn-clock/prefs/clock_utc</key>
        <owner>awn-clock</owner>
        <type>bool</type>
        <default>False</default>
        <locale name="C">
          <short>Use UTC time</short>
          <long></long>
        </locale>
      </schema>

      <schema>
        <key>/schemas/apps/awn-clock/prefs/clock_show_date</key>
        <owner>awn-clock</owner>
        <type>bool</type>
        <default>True</default>
        <locale name="C">
          <short>Display the date</short>
          <long></long>
        </locale>
      </schema>

      <schema>
        <key>/schemas/apps/awn-clock/prefs/clock_24h_mode</key>
        <owner>awn-clock</owner>
        <type>bool</type>
        <default>True</default>
        <locale name="C">
          <short>Use 24H mode (instead of 12h)</short>
          <long></long>
        </locale>
      </schema>
 
      <schema>
        <key>/schemas/apps/awn-clock/prefs/clock_font_size</key>
        <owner>awn-clock</owner>
        <type>int</type>
        <default>12</default>
        <locale name="C">
          <short>The font size for the date/time</short>
          <long></long>
        </locale>
      </schema> 

      <schema>
        <key>/schemas/apps/awn-clock/prefs/clock_font_face</key>
        <owner>awn-clock</owner>
        <type>string</type>
        <default>Sans</default>
        <locale name="C">
          <short>Font face for the date and the time.</short>
          <long></long>
        </locale>
      </schema>

      <schema>
        <key>/schemas/apps/awn-clock/prefs/clock_format_date</key>
        <owner>awn-clock</owner>
        <type>string</type>
        <default>%d/%m/%Y</default>
        <locale name="C">
          <short>Specify the format for the date.</short>
          <long></long>
        </locale>
      </schema>
      
      <schema>
        <key>/schemas/apps/awn-clock/prefs/clock_format_time</key>
        <owner>awn-clock</owner>
        <type>string</type>
        <default>%H:%M:%S</default>
        <locale name="C">
          <short>Specify the format for the time.</short>
          <long></long>
        </locale>
      </schema>

      <schema>
        <key>/schemas/apps/awn-clock/prefs/clock_font_color</key>
        <owner>awn-clock</owner>
        <type>string</type>
        <default>000000FF</default>
        <locale name="C">
          <short>RGBA color of the font</short>
          <long></long>
        </locale>
      </schema> 

      <schema>
        <key>/schemas/apps/awn-clock/prefs/clock_rectangle_color</key>
        <owner>awn-clock</owner>
        <type>string</type>
        <default>CCCCCCFF</default>
        <locale name="C">
          <short>RGBA color of the rectangle background</short>
          <long></long>
        </locale>
      </schema> 

      <schema>
        <key>/schemas/apps/awn-clock/prefs/clock_theme_path</key>
        <owner>awn-clock</owner>
        <type>string</type>
        <default>/usr/share/cairo-clock/themes/</default>
        <locale name="C">
          <short>Path of the clock theme</short>
          <long>It's the full path of the folder with ALL the theme, not the theme ITSELF</long>
        </locale>
      </schema> 

      <schema>
        <key>/schemas/apps/awn-clock/prefs/clock_theme_name</key>
        <owner>awn-clock</owner>
        <type>string</type>
        <default>tango</default>
        <locale name="C">
          <short>Name of the clock theme</short>
          <long>It's the theme name for the analogic display of the clock
          It's not the full path of the folder</long>
        </locale>
      </schema> 

    </schemalist>

</gconfschemafile>  
